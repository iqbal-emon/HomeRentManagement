@using HomeRentManagement.Data;
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Status</h5>
            <button type="button" class="btn-close" aria-label="Close" @onclick="HideModal"></button>
        </div>
        <div class="modal-body">
            <form @onsubmit="SaveRole">
                <div class="form-group">
                    <label for="Title">Name:</label>
                    <input type="text" class="form-control" @bind="status.Name" required />
                </div>
                <div class="form-group">
                    <label for="ShortForm">ShortForm:</label>
                    <input type="text" class="form-control" @bind="status.ShorForm" required />
                </div>

                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>


    </div>
</div>


@code {
    [Parameter]
    public Status status{ get; set; }
    [Parameter]
    public EventCallback SaveRole{ get; set; }
    [Parameter]
    public EventCallback HideModal { get; set; }
}
