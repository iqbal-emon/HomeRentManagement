@if (Bill!=null){
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 receipt-container">
      <div class="receipt-header text-center">
        <h1>Owner's Name: @Bill.Tenant?.TenantName</h1>
        <h3>RENT RECEIPT</h3>
      </div>
      <div class="receipt-info">
        <div class="row mb-3">
